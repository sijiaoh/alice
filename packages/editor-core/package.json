{
  "name": "editor-core",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "lintJson": "eslint --no-eslintrc --config .eslintrc.json.js --ext .json --fix .",
    "lintSrc": "eslint --ext .js,.jsx,.ts,.tsx --fix .",
    "lint": "run-p lintJson lintSrc",
    "fix": "prettier --loglevel warn --write .",
    "lix": "run-p lint fix",
    "start": "yarn build && node scripts/index.js",
    "codegen": "index-generator generate && dotenv-generator generate",
    "build": "run-s codegen tsc",
    "prepublish": "yarn build",
    "test": "yarn jest"
  },
  "dependencies": {
    "@types/jest": "^26.0.23",
    "default-ts-configs": "workspace:packages/default-ts-configs",
    "dotenv-generator": "workspace:packages/dotenv-generator",
    "eslint": "^7.28.0",
    "index-generator": "workspace:packages/index-generator",
    "jest": "^27.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "reactive-class": "workspace:packages/reactive-class",
    "typescript": "^4.3.2"
  }
}
