{
  "name": "twinkle",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "share:lint": "cd ${INIT_CWD} && eslint --ext .json,.js,.jsx,.ts,.tsx .",
    "share:fix": "cd ${INIT_CWD} && prettier --loglevel warn --write .",
    "share:lix": "cd ${INIT_CWD} && yarn share:lint && yarn share:fix",
    "lint": "yarn share:lint",
    "fix": "yarn share:fix",
    "lix": "yarn share:lix"
  },
  "dependencies": {
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.1"
  }
}
